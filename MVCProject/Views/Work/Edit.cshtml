@model MVCProject.Models.Work
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>


<form method="post" asp-controller="Work" asp-action="ChangeEntity" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="work_title">Title:</label>
        <input type="text" class="form-control" name="work_title" value="@Model.Title">
    </div>
    <div class="form-group">
        <label for="work_text">Text:</label>
        <textarea class="form-control" rows="5" name="work_text">@Model.Text</textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Отправить!</button>
    </div>
</form>