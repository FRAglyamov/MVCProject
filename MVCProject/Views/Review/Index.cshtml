@model IEnumerable<MVCProject.Models.Work>
@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>

@{
    <br>

    if (Model.Count() == 0)
    {
        <h2>Нет работ на проверку</h2>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Title:= @item.Title Total mark:= @item.FinalMark | 
                        <a asp-action="Edit" asp-route-id="@item.Id">Check</a>
                    </div>
                    <div class="panel-body">Text:= @item.Text</div>
                </div>
            </div>
        }

    }
}

