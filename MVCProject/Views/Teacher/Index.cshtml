@model IEnumerable<MVCProject.Models.TeacherTask>
@{
    ViewData["Title"] = "Index";
}
<br><br>
    <form method="post" asp-controller="Teacher" asp-action="Create">
        <div>
            <button type="submit" class="btn btn-success">Создать работу!</button>
        </div>
    </form>
    <br>
@if (Model.Count() == 0)
{

}
else
{
    foreach (var item in Model)
    {
        <div class="container">
            <div class="panel panel-info">
                <div class="panel-heading">
                    @item.Title |
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                </div>
                <div class="panel-body">@item.Text</div>
            </div>
        </div>
    }
}
