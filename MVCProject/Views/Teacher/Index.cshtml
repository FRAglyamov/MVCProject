@model IEnumerable<MVCProject.Models.TeacherTask>
@{
    ViewData["Title"] = "Index";
}
<br><br>
@if (Model.Count() == 0)
{
<form method="post" asp-controller="Teacher" asp-action="Create">
    <div>
        <button type="submit" class="btn btn-success">Создать работу!</button>
    </div>
</form>
}
else
{
    <form method="post" asp-controller="Teacher" asp-action="Create">
        <div>
            <button type="submit" class="btn btn-success">Создать работу!</button>
        </div>
    </form>
    foreach (var item in Model)
    {
        <div class="container">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Title:= @item.Title |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </div>
                <div class="panel-body">Text:= @item.Text</div>
            </div>
        </div>
    }
}
