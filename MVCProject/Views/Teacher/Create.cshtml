<script type="text/javascript" src="~/js/jquery.min.js"></script>
@{
    ViewData["Title"] = "Create";
}  
<h2>Создание задачи:</h2>
<form method="post" asp-controller="Teacher" asp-action="AddTask">
    <div class="form-group">
        <label for="task_title">Имя:</label>
        <input type="text" class="form-control" name="task_title">
    </div>

    <div class="form-group">
        <label for="task_text">Text:</label>
        <textarea class="form-control" rows="5" name="task_text"></textarea>
    </div>
    <div class="form-group">
         <label for="inputDate">Окончание работы:</label>
         <input type="date" class="form-control" name="task_date">
     </div>
    <div>
        <button type="submit" class="btn btn-success">Создать задачу!</button>
    </div>
</form>
