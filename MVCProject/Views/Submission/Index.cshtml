@model IEnumerable<MVCProject.Models.Submission>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<h3>@ViewBag.UserId</h3>

@if (Model.Count() == 0)
{
    <h2>null</h2>
}
else
{ 
foreach (var sub in Model)
{
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                Title:= @sub.Title |
                <a asp-action="Edit" asp-route-id="@sub.Id">Edit</a>
            </div>
        </div>
    </div>
}
}
}

<form method="post" asp-controller="Submission" asp-action="CreateSubmission">
    <div>
        <button type="submit" class="btn btn-success">Создать submission!</button>
    </div>
</form>

